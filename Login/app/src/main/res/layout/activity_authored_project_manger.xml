<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthoredProjectManger"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/main_page"
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:layout_marginBottom="80sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="center"
                android:text="Hello World Project"
                android:textColor="@color/BLACK"
                android:textSize="36sp"
                android:visibility="visible" />

            <TextView
                android:id="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:text="Pending Applicants"
                android:textColor="@color/BLACK"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/applicants"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity=""
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:text="Update Project"
                android:textColor="@color/BLACK"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="visible" />

            <ScrollView
                android:id="@+id/update_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/typeField"
                        android:layout_width="match_parent"
                        android:layout_height="60sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="@string/project_type"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/typeFieldat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Nice Type"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/number_positions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typeField">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="Number of \nPositions \nAvailable:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText

                            android:id="@+id/positionsField"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom"
                            android:lines="1"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="5"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/keyskills_Field"
                        android:layout_width="match_parent"
                        android:layout_height="140sp"
                        android:layout_below="@+id/number_positions">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:lines="2"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="3 Key \nSkills:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/skillsField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:height="45sp"
                            android:gravity="center"
                            android:text="JAVA"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/skills_Field"
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:layout_below="@+id/keyskills_Field">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="Skills \nNeeded:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/allSkillsField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="5"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="IT skillz \n JAVA \n C boi\n mypy fam"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:layout_below="@+id/skills_Field">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="Description:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/descField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:lines="6"
                            android:text="Its complicated \n BOII"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/length"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_below="@+id/description">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100sp"
                            android:lines="2"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="Length of \nProject:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/lengthField"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="4 weeks"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/brief_description"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_below="@+id/length">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="2"
                            android:padding="@dimen/activity_vertical_margin"
                            android:text="Brief \nDescription:"
                            android:textColor="@color/BLACK"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/shortDescField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="Featured description" />
                    </LinearLayout>


                </RelativeLayout>

            </ScrollView>


        </LinearLayout>

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:onClick="deleteProject"
        android:text="Delete" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDelete"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:onClick="updateProject"
        android:text="Update" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="@id/applicants"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>



